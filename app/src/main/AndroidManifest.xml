<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kevdev.aurora">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.ActivityLogin"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivitySignup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivityPrincipal"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivityResultados"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivityReproductor"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivityPlaylist"
            android:label="Your Playlist"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivitySongList"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivityProfile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivitySongListGeneros"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.ActivityResetPassword"
            android:label="@string/title_activity_activity_reset_password"
            android:theme="@style/AppTheme"></activity>

    </application>

</manifest>
